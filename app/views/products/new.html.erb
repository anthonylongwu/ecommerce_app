<ul>
  <% if @product && @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <li class="bad product"><%= message %></li>
    <% end %>
  <% end %>
</ul>

<h2>Create a new product</h2>
<%= form_for @product do |f| %>
<div>
 <h2> <%= f.label :name %></h2>
  <%= f.text_field :name, @product.name %>
</div>

<div>
  <h2><%= f.label :price %></h2>
  <%= f.text_field :price, @product.price %>
</div>

<div>
 <h2><%= f.label :image %></h2>
  <%= f.text_field :image, @product.image %>
</div>
<div>
  <h2><%= f.label :description %></h2>
  <%= f.text_field :description, @product.description %>
</div>

<div>
<%= f.label :supplier %>
<%= f.collection_select :supplier, :supplier_id, Supplier.all, :id :name %>
</div>
<div>
  <%= f.fields_for :images do |ff| %>
    <div>
      <%= ff.label :image_url %>
      <%= ff.text_field :image_url %>
</div>
<% end %>
</div>

<div>
  <%= f.submit "click here if you're awesome" %>
</div>

<% end %>
